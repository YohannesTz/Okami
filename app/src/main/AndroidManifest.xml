<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yohannes.dev.app.okami">

    <uses-permission android:name="android.permission.INTERNET" />

    <queries>
        <intent>
            <action android:name="com.google.android.youtube.api.service.START" />
        </intent>
    </queries>

    <application
        android:name=".App"
        android:icon="@mipmap/ic_launcher_japaneese"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_japaneese_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CustomSplashScreenTheme">

        <activity
            android:name=".activities.OpenActivity"
            android:exported="true">
            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="kitsu.io"
                    android:pathPrefix="/anime"
                    android:scheme="https" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.SearchActivity"
            android:exported="true" />
        <activity
            android:name=".activities.SettingsActivity"
            android:exported="true"
            android:label="@string/title_activity_settings" />
        <activity
            android:name=".activities.PlayerActivity"
            android:exported="true" />
        <activity
            android:name=".activities.DetailActivity"
            android:exported="true" />
        <activity
            android:name=".activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>