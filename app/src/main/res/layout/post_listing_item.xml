<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:expandableTextView="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="hardcodedText"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="8dp"
    card_view:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/postItemUserProfile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/colorPlaceHolder"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/circleImageView"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/postItemUserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="Emma" />

                <TextView
                    android:id="@+id/postItemTimeStamp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="10 February at 10:02AM"
                    android:textColor="#546E7A" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/postContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="16sp"
            android:textColor="#546E7A"
            expandableTextView:animDuration="500"
            expandableTextView:collapsedLines="4"
            expandableTextView:isExpanded="false"
            expandableTextView:readLessText="Read Less"
            expandableTextView:readMoreText="Read More"
            expandableTextView:textMode="line"
            tools:text="@string/long_text" />

        <LinearLayout
            android:paddingTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/postLikesCount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Likes"
                android:textSize="16sp"
                android:textAllCaps="false"
                app:iconTint="@color/black" />

            <TextView
                android:id="@+id/postCommentsCount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Comments"
                android:gravity="end"
                android:textSize="16sp"
                android:textAllCaps="false"
                app:iconTint="@color/black" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp"
            android:background="#F5DCDCDC" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/postItemLikeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:style=""
                style="@style/ClickableButton"
                android:layout_weight="1"
                android:text="Like"
                android:textSize="16sp"
                android:textAllCaps="false"
                app:iconTint="@color/black"
                app:icon="@drawable/ic_baseline_favorite_border" />

            <TextView
                android:id="@+id/postItemCommentButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Comment"
                android:textSize="16sp"
                tools:style=""
                style="@style/ClickableButton"
                android:textAllCaps="false"
                app:iconTint="@color/black"
                app:icon="@drawable/ic_baseline_favorite_border" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="4dp"
            android:background="#F5DCDCDC" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/currentUserImage"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_weight="3"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:src="@drawable/ic_baseline_person_24" />

            <EditText
                android:id="@+id/searchView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="5"
                android:background="@drawable/rounded_corners"
                android:elevation="1dp"
                android:hint="Comment"
                android:imeOptions="actionGo"
                android:inputType="text"
                android:minHeight="40dp"
                android:padding="8dp"
                android:queryHint="Search"
                android:singleLine="true"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/imageButton"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_weight="3"
                android:minHeight="48dp"
                expandableTextView:srcCompat="@drawable/ic_baseline_add_circle_outline_24"
                tools:ignore="SpeakableTextPresentCheck" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>